@{ 
    Layout = null;
}

@model Project_El_Baratico.Models.Client

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Sign Up Form</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">

    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700'>
    <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css'>
    <link rel='stylesheet prefetch' href='http://fian.my.id/marka/static/marka/css/marka.css'>

    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>


    <link href="@Url.Content("~/Content/myTemplates/")css/signUpClient.css" rel="stylesheet" type="text/css" />
    <script runat="server">
        protected void Button1_Click(object sender, EventArgs e)
        {
            Label1.Text = "Your email: " + TextBox1.Text.ToString();
        }
    </script>

</head>

<body>
    <div>
        <h2 class="title">El Baratico</h2>
    </div>
    <div class="form">
        <div class="form-action">
            <h2 class="form-heading" id="Label1">Create your account as a client</h2>
            <i id="icon" class="form-icon"></i>
        </div>
       
    
        <form  method="post" runat="server" action="saveClient">
        <div class="form-inputs">
            <div class="form-input">
                <label for="Name">Name</label>
                <input data-val="true"
                       runat="server" type="text" name="pName" />
                @Html.ValidationMessageFor(m => m.Name)

                </div>
            <div class="form-input">
                <label for="Lastname">Lastname</label>
                <!--    <input type="text" name="pLastname" id="" value="" />-->
                <input data-val="true"
                       runat="server" type="text" name="pLastname" />
                @Html.ValidationMessageFor(m => m.Lastname)

                </div>
            <div class="form-input">
                <label for="Email">Email</label>
                <!--    <input type="text" name="pEmail" id="" value="" /> -->
                <input data-val="true"
                       runat="server" type="text" name="pEmail" />
                @Html.ValidationMessageFor(m => m.Email)

                </div>
            <div class="form-input">
                <label for="Address">Address</label>
                <!--    <input type="text" name="pAddress" id="" value="" /> -->
                <input data-val="true"
                       runat="server" type="text" name="pAddress" />
                @Html.ValidationMessageFor(m => m.Address)


                </div>
            <div class="form-input">
                <label for="Username">Username</label>
                <!--    <input type="text" name="pUsername" id="" value="" /> -->

                <input data-val="true"
                       runat="server" type="text" name="pUsername" />

                <asp:RequiredFieldValidator ID="RegularExpressionValidator1"
                                            runat="server"
                                            ControlToValidate="TextBox1"
                                            ErrorMessage="Input valid email address!">
                </asp:RequiredFieldValidator>
            </div>


            <div class="form-input">
                <label for="Password">Password</label>
                <!--        <input type="password" name="pPassword" id="" value="" /> -->
                <input data-val="true"
                       ID="txtPassword"
                       runat="server" type="Password" name="pPassword"/>
                <asp:RequiredFieldValidator ErrorMessage="Required" ForeColor="Red" ControlToValidate="txtPassword" runat="server" />


            </div>
            <div class="form-input">
                <label for="Confirm">Confirm password</label>
                <!--          <input type="password" name="pConfirm" id="" value="" /> -->

                <input data-val="true"
                       ID="txtConfirmPassword"
                       runat="server" type="Password" name="pConfirm"/>
                <asp:CompareValidator ErrorMessage="Passwords do not match." ForeColor="Red" ControlToCompare="txtPassword"
                                      ControlToValidate="txtConfirmPassword" runat="server" />



            </div>

        </div>
        <input type="button" class="form-button form-button__cancel" value="Cancel" />
        <input type="submit" class="form-button form-button__submit" value="Sign Up" />

        </form>


        <h4> Have an account?</h4>
        <a href="loginUser">Sign in here</a>
    </div>
        <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
        <script src='http://fian.my.id/marka/static/marka/js/marka.js'></script>



        <script type="text/javascript" src="@Url.Content("~/Content/myTemplates/")js/signUpClient.js"></script>



    </body>

    </html>
